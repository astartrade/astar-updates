generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id            Int      @id @default(autoincrement())
  title         String
  slug          String   @unique
  author        Author   @relation(fields: [authorId], references: [id])
  authorId      Int
  category      String?
  text          String
  excerpt       String?  // New field for article excerpts
  publishedDate DateTime
  status        String?
  views         Int?     @default(0)
  featuredImage String?
  thumbnail     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


model Author {
  id        Int       @id @default(autoincrement())
  name      String
  avatar    String
  email     String    @unique
  role      String?
  team      String?
  status    String?
  country   String    @default("Ghana")
  city      String?
  address   String?
  phone     String?
  website   String?
  company   String?
  jobTitle  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}